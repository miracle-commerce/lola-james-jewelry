#widget-fave-html .ssw-fave-btn {
  line-height: 47px;
  margin-top: 10px;
  max-width: 240px;
}

#widget-fave-html .ssw-fave-btn-content {
  font-size: 14px;
  text-transform: uppercase;
  font-weight: 600;
  border-radius: 0;
  color: #000000;
  border-color: #000000;
}

#widget-fave-html .ssw-fave-btn-counter,
#widget-fave-html .ssw-fave-btn-counter:before {
  border-radius: 0;
  color: #000000;
  border-color: #000000;
}

@media all and (max-width: 988px) {
  #widget-fave-html .ssw-fave-btn {
    line-height: 50px;
    margin-top: 10px;
  }
}

.ssw-instagram-slide-title {
  text-align: center;
  font-weight: 400;
  text-transform: uppercase;
}

#ssw-wishlist-save form .ssw-inline button { color:#222; background-color#FFE6F1; }

.ssw-faveiticon { right:0; display:flex; }
.ssw-faveiticon .ssw-fave-icon { order:1; }
.ssw-faveiticon .faves-count { display:none; }
.faves-count:before { left:calc(100% + 10px); border-color:transparent transparent transparent #aaa; }
.faves-count:after { left:calc(100% + 8px); border-color:transparent transparent transparent #fff; -webkit-transform:translate3d(-8px,4px,0); }
.ssw-reward-tab-ico { background-color:#FFE6F1; }
.ssw-reward-tab-ico svg path { fill:#333; }