<section class="press-celebrity">
  <div class="container">    
    
    <div class="product-collection products-grid row">
           
          
     
    
      
      
        
 
      
      

  {% for block in section.blocks %}         
<div class="no_crop_image  grid-item col-md-15 col-sm-3">
            



<div class="inner product-item  wow fadeIn">
  <div class="inner-top">
    <div class="product-top" style="overflow: hidden; max-height: 220px">
      <div class="product-image">
        {% if block.settings.link %}
        <a href="{{ block.settings.link }}" class="product-grid-image" style="display:block; max-height:220px; overflow-y:hidden;">
         <img src="{{ block.settings.image | img_url : "master" }}" alt="{{ block.settings.image.alt }}"/>
          <div class="hover"></div>
        </a>
        {% else %}
        <a class="product-grid-image" style="display:block; max-height:220px; overflow-y:hidden;">
         <img src="{{ block.settings.image | img_url : "master" }}" alt="{{ block.settings.image.alt }}"/>
        </a>
        {% endif %}
      </div>


    </div>

    <div class="product-bottom">
       
      <a class="product-title" href="/collections/new-arrivals/products/my-squad">{{ block.settings.name }}</a>
    </div>
  </div>
  
  
  
  
</div>
          </div>
          
   {% endfor %}     
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
      
         
