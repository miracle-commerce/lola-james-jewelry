<div class="container">

  <div class="section-block page-header">
    <h1>{{ collection.title }}</h1>
  </div>


  <div class="section-block">
    <div class="row">
      <div class="col-lg-3 d-none d-lg-block">
         <ul class="list-group">
           {% for link in linklists[section.settings.clmenu].links %}
           	<li class="list-group-item"><a href="{{link.url}}">{{ link.title }}</a></li>
           {%- endfor -%}
        </ul>
      </div>

      <div class="col-lg-9 product-list">
        {% if collection.products_count == 0 %}
        <p class="alert alert-warning" role="alert">{{ 'products.empty' | t}}</p>
        {% else %}
        {% assign products_list = collection.products %}
        {% paginate collection.products by section.settings.results_per_page %}
        {% assign products_list = collection.products %}

        {% include 'products-list' %}
        {% include 'pagination' %}
        {% endpaginate %}
        {% endif %}
      </div>
    </div>
  </div>

</div>

